<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yatharth Water Purifier Service</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    body {
        background-color: #f8faff;
        color: #0a2540;
        font-family: 'Segoe UI', sans-serif;
    }
    .navbar {
        background-color: #007bff;
    }
    .navbar-brand, .nav-link {
        color: white !important;
    }
    .navbar-brand:hover, .nav-link:hover {
        color: #e2e6ea !important;
    }
    .table thead {
        background-color: #007bff;
        color: white;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
    .btn-danger {
        background-color: #dc3545;
        border: none;
    }
    .btn-danger:hover {
        background-color: #bb2d3b;
    }
    .card {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 20px;
        background-color: white;
    }
</style>

</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
             <a class="navbar-brand" href="/">Yatharth Water Purifier Service</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/ServiceBookings/Create">Book Service</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ServiceBookings">View Bookings</a></li>
                    </ul>
                </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5">
        @RenderBody()
    </div>

    <footer class="footer bg-white">
        <div class="container text-center">
            © @DateTime.Now.Year - Yatharth Water Purifier Service. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
